<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: lightblue;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (!user) { %>
        <form class="form-inline my-2 my-lg-0 mx-1" method="GET" action="/login">
          <button class="btn btn-primary btn-sm" type="submit">Log in</button>
        </form>
        <form class="form-inline my-2 my-lg-0 mx-1" method="GET" action="/signup">
          <button class="btn btn-outline-dark btn-sm" type="submit">Sign up</button>
        </form>
      <% } else { %>
        <a>Logged in as: <b><%= user.getEmail(); %></b></a>
        <form class="form-inline my-2 my-lg-0 ml-2" method="POST" action="/logout?_method=DELETE">
          <button class="btn btn-outline-primary btn-sm" type="submit">Log out</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>